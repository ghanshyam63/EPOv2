@model IEnumerable<EPOv2.ViewModels.CostCentreViewModel>
    @{
        Layout = null;
    }
<html>
<head>
    <title></title>
    <meta http-equiv="content-type" content="text/html; charset=ISO-8859-1">
    <meta name="description" content="csl system" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">



    <style>

  @Html.Raw(File.ReadAllText(Server.MapPath("~/Content/bootstrap-mail.css")))

    </style>

</head>
<body>
<div class="container body-content">
    <table class="small table col-sm-12 table-condensed table-striped">
        <tr>
            <th class="col-sm-1">CC Code</th>
            <th class="col-sm-3">CC Name</th>
            <th class="col-sm-1">Owner</th>
        </tr>
        @foreach (var cc in Model)
        {
            <tr>
                <td >@cc.Code</td>
                <td >@cc.Name</td>
                <td >@cc.Owner</td>
            </tr>
        }
    </table>
</div>
</body>
</html>
