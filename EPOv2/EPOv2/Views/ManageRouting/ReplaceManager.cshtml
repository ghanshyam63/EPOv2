
@{
    ViewBag.Title = "Replace Manager";
}

<h2>Replace Manager</h2>
@Html.AntiForgeryToken()
@using (@Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        @Html.ValidationSummary(true)
        @{
    if (ViewBag.Result != null)
    {
        <div class="alert alert-success">@ViewBag.Result</div>
    }
        }
        <div class="form-group">
            
            <div class="form-group">
                @Html.Label("Old Manager: ", new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownList("oldMng", (SelectList)ViewBag.oldMngLst, "Select Manager", new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                @Html.Label("New Manager: ", new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownList("newMng", (SelectList)ViewBag.newMngLst, "Select Manager", new { @class = "form-control" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" id="btn_replacemanager" class="btn btn-primary" value="Update" />
                </div>
            </div>
        </div>
        @*<div class="alert alert-info">
            @ViewBag.runtime1

            @ViewBag.runtime2

            @ViewBag.Name
        </div>*@

    </div>


}
