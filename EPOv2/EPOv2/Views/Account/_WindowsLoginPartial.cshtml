@using Microsoft.Owin.Security

<h4>Use Windows Authentication.</h4>
<hr />
<div>
    @*// @using (Html.BeginForm("WindowsLogin", "Account", new { @class = "form-horizontal", role = "form" }))*@
@using (Html.BeginWindowsAuthForm(new { @class = "form-horizontal", role = "form" }))
{
        @Html.AntiForgeryToken()
        <input type="hidden" name="returnUrl" value="@ViewBag.ReturnUrl" />
        <input type="submit" value="Windows Sign In" class="btn btn-default" />
    }
</div>
<br />